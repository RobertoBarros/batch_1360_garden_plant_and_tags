<div class="row justify-content-center mt-5">
  <div class="col-4">
    <h1>Add Tags to <%= @plant.name %></h1>

    <%= simple_form_for [@plant, @classification] do |f| %>

      <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, data: { controller: "tom-select" }} %>
      <%= f.submit 'Add Tag', class: 'btn btn-primary' %>

    <% end %>

  </div>
</div>
