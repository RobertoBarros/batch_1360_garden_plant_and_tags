<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.image_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">

  <div class="cards mt-3">

    <% @garden.plants.each do |plant| %>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>
        <%= link_to plant_path(plant), class: 'remove', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
          <i class="fa-solid fa-trash-can fa-xl"></i>
        <% end %>
        <div class='card-tags'>
          <% plant.tags.each do |tag| %>
            <span><%= tag.name %></span>
          <% end %>
          <%= link_to '+', new_plant_classification_path(plant) %>
        </div>
      </div>

    <% end %>

  </div>


</div>






<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4">
      <h2 class='text-center'>Add Plants</h2>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <div class="d-grid">
          <%= f.submit 'Add Plant', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
